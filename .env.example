APP_NAME="Galaxy of Drones Online"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
# IMPORTANT: Must include the scheme (https://) and the exact host.
# On Hostinger subdomain: APP_URL=https://god.makeit.uno
APP_URL=https://yourdomain.com
APP_TIMEZONE=UTC
APP_SPEED=1

LOG_CHANNEL=single
# Use "debug" or "warning" while troubleshooting 419/session issues.
# Set to "error" once everything is stable.
LOG_LEVEL=warning

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ──────────────────────────────────────────────────────────────
# Session cookie settings — critical for CSRF / 419 prevention
# ──────────────────────────────────────────────────────────────
# SESSION_DOMAIN: bare domain, NOT a URL!
#   ".makeit.uno"        → cookie shared across all *.makeit.uno subdomains
#   "god.makeit.uno"     → cookie only for god.makeit.uno
#   null  (or unset)     → auto-detect from request host
# WRONG: "https://god.makeit.uno" ← this WILL cause 419 errors!
SESSION_DOMAIN=.makeit.uno

# Set to true when site is served over HTTPS (recommended).
# Set to null for auto-detect behind reverse proxy.
SESSION_SECURE_COOKIE=true

SESSION_SAME_SITE=lax

# Trust all proxies (required for shared hosting behind load balancers / reverse proxies)
TRUSTED_PROXIES=*

MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

CRON_TOKEN=
INSTALL_TOKEN=
